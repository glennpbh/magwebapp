# Oracle Database Connection
# Format: username/password@hostname:port/service_name
# Example: myuser/mypass@localhost:1521/XE
ORACLE_CONNECTION_STRING=username/password@hostname:port/service_name

# JWT Configuration
JWT_SECRET=your-super-secret-key-here-make-it-long-and-random
JWT_EXPIRES_IN=24h

# LDAP Configuration
# Comma-separated list of LDAP server hostnames for failover support
LDAP_SERVERS=pbh-dc1,pbh-dc2,pbh-dc3,pbh-dc4
LDAP_PORT=636
LDAP_BASE_DN=dc=nobutts,dc=com
LDAP_USER_SEARCH_BASE=ou=users,ou=pbh
LDAP_GROUP_SEARCH_BASE=ou=groups

# LDAP search user for fetching user details
LDAP_SEARCH_USER_UPN=blurg@nobutts.com
LDAP_SEARCH_USER_PASSWORD=foo