# Oracle Database Connection
# Format: username/password@hostname:port/service_name
# Example: myuser/mypass@localhost:1521/XE
ORACLE_CONNECTION_STRING=username/password@hostname:port/service_name

# JWT Configuration
JWT_SECRET=your-super-secret-key-here-make-it-long-and-random
JWT_EXPIRES_IN=24h

